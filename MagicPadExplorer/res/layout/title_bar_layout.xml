<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    
    <ImageView android:id="@+id/isorg_logo_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/small_isorg_logo"
        android:layout_alignParentLeft="true"/>
    
    <TextView android:id="@+tv/title_bar"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="17sp"
	    android:padding="5dp"
	    android:layout_toRightOf="@id/isorg_logo_title_bar"
	    android:layout_alignBottom="@id/isorg_logo_title_bar"/>
    
    <ImageView android:id="@+id/connexion_state_drawable" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/not_ok"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_toLeftOf="@+id/connexion_state"
        android:layout_alignBottom="@tv/title_bar"/>
    
    <TextView android:id="@+id/connexion_state"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="15dp"
	    android:paddingBottom="5dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignBottom="@id/connexion_state_drawable"/>
    
</RelativeLayout>
